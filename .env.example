SITE_HOST=boutiquemark.shop # 换域名必改：站点域名（不带协议），用于前端构建
DJANGO_ALLOWED_HOSTS=boutiquemark.shop,www.boutiquemark.shop,localhost,127.0.0.1 # 换域名必改：Django 允许访问的 Host 列表
DJANGO_BASE_HOST_URL=https://boutiquemark.shop # 换域名必改：后端生成站点 URL（建议为 https://你的域名）
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=change-me

PUBLIC_BASE_URL=https://boutiquemark.shop # 换域名必改：支付回跳/站点对外 URL（建议为 https://你的域名）

NEXT_PUBLIC_BASE_URL=https://boutiquemark.shop # 换域名必改：canonical/JSON-LD/分享链接/图片绝对路径等
NEXT_PUBLIC_DJANGO_BASE_URL=https://boutiquemark.shop # 换域名必改：前端 SSR/接口请求后端的 base（同域通常=NEXT_PUBLIC_BASE_URL）

